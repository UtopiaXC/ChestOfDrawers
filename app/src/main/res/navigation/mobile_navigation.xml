<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_favourite">

    <fragment
        android:id="@+id/navigation_favourite"
        android:name="com.utopiaxc.chest.fragments.favourite.FragmentFavourite"
        android:label="@string/app_name"
        tools:layout="@layout/fragment_favourite" />

    <fragment
        android:id="@+id/navigation_all"
        android:name="com.utopiaxc.chest.fragments.all.FragmentAll"
        android:label="@string/app_name"
        tools:layout="@layout/fragment_all" >
        <action
            android:id="@+id/action_navigation_all_to_activityWeibo"
            app:destination="@id/activityWeibo" />
    </fragment>

    <fragment
        android:id="@+id/navigation_about"
        android:name="com.utopiaxc.chest.fragments.about.FragmentAbout"
        android:label="@string/app_name"
        tools:layout="@layout/fragment_about" />

    <activity
        android:id="@+id/activityWeibo"
        android:name="com.utopiaxc.chest.activities.ActivityWeibo"
        android:label="@string/function_weibo_title"
        tools:layout="@layout/activity_weibo" >
    </activity>
</navigation>